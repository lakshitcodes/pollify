<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <!-- LoginServlet configuration -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.pollify.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!-- MainServlet configuration -->
    <servlet>
        <servlet-name>MainServlet</servlet-name>
        <servlet-class>com.pollify.servlets.MainServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MainServlet</servlet-name>
        <url-pattern>/main</url-pattern>
    </servlet-mapping>

    <!-- RegisterServlet configuration -->
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>com.pollify.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <!-- VerifyOtpServlet configuration -->
    <servlet>
        <servlet-name>VerifyOtpServlet</servlet-name>
        <servlet-class>com.pollify.VerifyOtpServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>VerifyOtpServlet</servlet-name>
        <url-pattern>/verify-otp</url-pattern>
    </servlet-mapping>

    <!-- ApplyCandidateServlet configuration -->
    <servlet>
        <servlet-name>ApplyCandidateServlet</servlet-name>
        <servlet-class>com.pollify.ApplyCandidateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ApplyCandidateServlet</servlet-name>
        <url-pattern>/applyCandidate</url-pattern>
    </servlet-mapping>

    <!-- SetVotingPeriod Servlet configuration -->
   <servlet>
       <servlet-name>SetVotingPeriod</servlet-name>
       <servlet-class>com.pollify.SetVotingPeriod</servlet-class>
   </servlet>
   <servlet-mapping>
       <servlet-name>SetVotingPeriod</servlet-name>
       <url-pattern>/SetVotingPeriod</url-pattern>
   </servlet-mapping>


   <!-- View Voting Period -->
   <servlet>
       <servlet-name>ViewVotingPeriods</servlet-name>
       <servlet-class>com.pollify.ViewVotingPeriods</servlet-class>
   </servlet>
  
   <servlet-mapping>
       <servlet-name>ViewVotingPeriods</servlet-name>
       <url-pattern>/viewVotingPeriods</url-pattern>
   </servlet-mapping>

   <!-- Approve Candidate -->
   <servlet>
       <servlet-name>ApproveCandidate</servlet-name>
       <servlet-class>com.pollify.ApproveCandidates</servlet-class>
   </servlet>
  
   <servlet-mapping>
       <servlet-name>ApproveCandidate</servlet-name>
       <url-pattern>/approveCandidate</url-pattern>
   </servlet-mapping>
   <!-- Approval -->
   <servlet>
       <servlet-name>FinalApproval</servlet-name>
       <servlet-class>com.pollify.ApprovedServlet</servlet-class>
   </servlet>
  
   <servlet-mapping>
       <servlet-name>FinalApproval</servlet-name>
       <url-pattern>/approved</url-pattern>
   </servlet-mapping>
   <!-- Rejection -->
   <servlet>
       <servlet-name>Rejection</servlet-name>
       <servlet-class>com.pollify.RejectedServlet</servlet-class>
   </servlet>
  
   <servlet-mapping>
       <servlet-name>Rejection</servlet-name>
       <url-pattern>/rejected</url-pattern>
   </servlet-mapping>

    <!-- View Candidate -->
   <servlet>
       <servlet-name>ViewCandidate</servlet-name>
       <servlet-class>com.pollify.VotePageServlet</servlet-class>
   </servlet>
  
   <servlet-mapping>
       <servlet-name>ViewCandidate</servlet-name>
       <url-pattern>/viewCandidateList</url-pattern>
   </servlet-mapping>
    <!-- View Candidate -->
   <servlet>
       <servlet-name>CandidateManifesto</servlet-name>
       <servlet-class>com.pollify.ManifestoServletCandidate</servlet-class>
   </servlet>
  
   <servlet-mapping>
       <servlet-name>CandidateManifesto</servlet-name>
       <url-pattern>/candidateManifesto</url-pattern>
   </servlet-mapping>


    <!-- Update Manifesto  -->
   <servlet>
        <servlet-name>UpdateManifestoServlet</servlet-name>
        <servlet-class>com.pollify.UpdateManifestoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateManifestoServlet</servlet-name>
        <url-pattern>/updateManifesto</url-pattern>
    </servlet-mapping>
    <!-- Delete Manifesto  -->
    <servlet>
        <servlet-name>DeleteManifestoServlet</servlet-name>
        <servlet-class>com.pollify.DeleteManifestoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteManifestoServlet</servlet-name>
        <url-pattern>/deleteManifesto</url-pattern>
    </servlet-mapping>
    <!-- Upload Manifesto  -->
    <servlet>
        <servlet-name>UploadManifestoServlet</servlet-name>
        <servlet-class>com.pollify.UploadManifestoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UploadManifestoServlet</servlet-name>
        <url-pattern>/uploadManifesto</url-pattern>
    </servlet-mapping>
    <!-- Find Active Polls  -->
    <servlet>
        <servlet-name>FindActivePolls</servlet-name>
        <servlet-class>com.pollify.FindActivePolls</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FindActivePolls</servlet-name>
        <url-pattern>/findActivePolls</url-pattern>
    </servlet-mapping>

    <!-- Submit Vote -->
    <servlet>
        <servlet-name>SubmitVoteServlet</servlet-name>
        <servlet-class>com.pollify.SubmitVoteServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>SubmitVoteServlet</servlet-name>
        <url-pattern>/SubmitVoteServlet</url-pattern>
    </servlet-mapping>

    <!-- View Candidate List -->
    <servlet>
        <servlet-name>ViewCandidate</servlet-name>
        <servlet-class>com.pollify.ViewCandidate</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ViewCandidate</servlet-name>
        <url-pattern>/viewCandidate</url-pattern>
    </servlet-mapping>
    <!-- Enter Poll -->
    <servlet>
        <servlet-name>EnterPoll</servlet-name>
        <servlet-class>com.pollify.EnterPoll</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>EnterPoll</servlet-name>
        <url-pattern>/enterPoll</url-pattern>
    </servlet-mapping>

    <!--Vote Page Servlet-->
    <servlet>
        <servlet-name>VotePageServlet</servlet-name>
        <servlet-class>com.pollify.VotePageServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>VotePageServlet</servlet-name>
        <url-pattern>/votePage</url-pattern> <!-- This URL pattern can be changed as needed -->
    </servlet-mapping>
    <!-- Casting Vote -->
    <servlet>
        <servlet-name>RegisterVote</servlet-name>
        <servlet-class>com.pollify.RegisterVote</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>RegisterVote</servlet-name>
        <url-pattern>/registerVote</url-pattern> <!-- This URL pattern can be changed as needed -->
    </servlet-mapping>

    <!-- Default welcome file -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

</web-app>
