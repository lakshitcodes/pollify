<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <!-- LoginServlet configuration -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.pollify.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!-- MainServlet configuration -->
    <servlet>
        <servlet-name>MainServlet</servlet-name>
        <servlet-class>com.pollify.servlets.MainServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MainServlet</servlet-name>
        <url-pattern>/main</url-pattern>
    </servlet-mapping>

    <!-- RegisterServlet configuration -->
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>com.pollify.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <!-- VerifyOtpServlet configuration -->
    <servlet>
        <servlet-name>VerifyOtpServlet</servlet-name>
        <servlet-class>com.pollify.VerifyOtpServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>VerifyOtpServlet</servlet-name>
        <url-pattern>/verify-otp</url-pattern>
    </servlet-mapping>

    <!-- ApplyCandidateServlet configuration -->
    <servlet>
        <servlet-name>ApplyCandidateServlet</servlet-name>
        <servlet-class>com.pollify.ApplyCandidateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ApplyCandidateServlet</servlet-name>
        <url-pattern>/applyCandidate</url-pattern>
    </servlet-mapping>

    <!-- SetVotingPeriod Servlet configuration -->
   <servlet>
       <servlet-name>SetVotingPeriod</servlet-name>
       <servlet-class>com.pollify.SetVotingPeriod</servlet-class>
   </servlet>
   <servlet-mapping>
       <servlet-name>SetVotingPeriod</servlet-name>
       <url-pattern>/SetVotingPeriod</url-pattern>
   </servlet-mapping>


   <!-- View Voting Period -->
   <servlet>
       <servlet-name>ViewVotingPeriods</servlet-name>
       <servlet-class>com.pollify.ViewVotingPeriods</servlet-class>
   </servlet>
  
   <servlet-mapping>
       <servlet-name>ViewVotingPeriods</servlet-name>
       <url-pattern>/viewVotingPeriods</url-pattern>
   </servlet-mapping>

   <!-- Approve Candidate -->
   <servlet>
       <servlet-name>ApproveCandidate</servlet-name>
       <servlet-class>com.pollify.ApproveCandidates</servlet-class>
   </servlet>
  
   <servlet-mapping>
       <servlet-name>ApproveCandidate</servlet-name>
       <url-pattern>/approveCandidate</url-pattern>
   </servlet-mapping>
   <!-- Approval -->
   <servlet>
       <servlet-name>FinalApproval</servlet-name>
       <servlet-class>com.pollify.ApprovedServlet</servlet-class>
   </servlet>
  
   <servlet-mapping>
       <servlet-name>FinalApproval</servlet-name>
       <url-pattern>/approved</url-pattern>
   </servlet-mapping>
   <!-- Rejection -->
   <servlet>
       <servlet-name>Rejection</servlet-name>
       <servlet-class>com.pollify.RejectedServlet</servlet-class>
   </servlet>
  
   <servlet-mapping>
       <servlet-name>Rejection</servlet-name>
       <url-pattern>/rejected</url-pattern>
   </servlet-mapping>

    <!-- Default welcome file -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

</web-app>
